<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- SSL Certificate Manager Group -->
        <record id="group_ssl_cert_manager" model="res.groups">
            <field name="name">SSL Certificate Manager</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="comment">Users who can manage SSL certificates</field>
        </record>
        
        <!-- SSL Certificate Admin Group -->
        <record id="group_ssl_cert_admin" model="res.groups">
            <field name="name">SSL Certificate Administrator</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="implied_ids" eval="[(4, ref('group_ssl_cert_manager'))]"/>
            <field name="comment">Administrators who can configure DNS providers and accounts</field>
        </record>
        
        <!-- Rules for SSL Certificates -->
        <record id="rule_ssl_certificate_manager" model="ir.rule">
            <field name="name">SSL Certificate: Manager Access</field>
            <field name="model_id" ref="model_ssl_certificate"/>
            <field name="groups" eval="[(4, ref('group_ssl_cert_manager'))]"/>
            <field name="perm_read">True</field>
            <field name="perm_write">True</field>
            <field name="perm_create">True</field>
            <field name="perm_unlink">True</field>
        </record>
        
        <!-- Rules for DNS Providers -->
        <record id="rule_dns_provider_admin" model="ir.rule">
            <field name="name">DNS Provider: Admin Access</field>
            <field name="model_id" ref="model_dns_provider"/>
            <field name="groups" eval="[(4, ref('group_ssl_cert_admin'))]"/>
            <field name="perm_read">True</field>
            <field name="perm_write">True</field>
            <field name="perm_create">True</field>
            <field name="perm_unlink">True</field>
        </record>
        
        <!-- Rules for DNS Accounts -->
        <record id="rule_dns_account_admin" model="ir.rule">
            <field name="name">DNS Account: Admin Access</field>
            <field name="model_id" ref="model_dns_account"/>
            <field name="groups" eval="[(4, ref('group_ssl_cert_admin'))]"/>
            <field name="perm_read">True</field>
            <field name="perm_write">True</field>
            <field name="perm_create">True</field>
            <field name="perm_unlink">True</field>
        </record>
        
    </data>
</odoo>
