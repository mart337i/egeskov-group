<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_task_kanban_github" model="ir.ui.view">
        <field name="name">project.task.kanban.github</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_kanban"/>
        <field name="arch" type="xml">
            <!-- Add required fields to kanban view -->
            <xpath expr="//field[@name='state']" position="after">
                <field name="project_id" invisible="1"/>
                <field name="github_branch_id"/>
            </xpath>
        </field>
    </record>
    
    <record id="view_task_form_github" model="ir.ui.view">
        <field name="name">project.task.form.github</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <!-- Add GitHub branch field below date_deadline -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <label for="github_branch_id" string="GitHub Branch" invisible="not project_id.github_repository_id"/>
                <div invisible="not project_id.github_repository_id">
                    <field name="github_branch_id" 
                           placeholder="Select a branch..."
                           nolabel="1"
                           domain="[('repository_id', '=', project_id.github_repository_id)]"
                           options="{'no_create': True, 'no_edit': True}"/>
                </div>
            </xpath>
            
            <!-- Add GitHub buttons to button box -->
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button name="action_open_github_repo" 
                        type="object" 
                        class="oe_stat_button" 
                        icon="fa-github"
                        invisible="not project_id.github_repository_id">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">GitHub</span>
                        <span class="o_stat_text">Repository</span>
                    </div>
                </button>
                
                <button name="action_open_github_branch" 
                        type="object" 
                        class="oe_stat_button" 
                        icon="fa-code-fork"
                        invisible="not github_branch_id or not project_id.github_repository_id">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">GitHub</span>
                        <span class="o_stat_text">Branch</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>
</odoo>