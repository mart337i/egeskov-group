<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- SSL Certificate list View -->
        <record id="view_ssl_certificate_list" model="ir.ui.view">
            <field name="name">ssl.certificate.list</field>
            <field name="model">ssl.certificate</field>
            <field name="arch" type="xml">
                <list decoration-success="state == 'active'" 
                      decoration-warning="needs_renewal == True"
                      decoration-danger="state == 'error'">
                    <field name="domain"/>
                    <field name="dns_provider_id"/>
                    <field name="state" widget="badge"/>
                    <field name="exists" widget="boolean"/>
                    <field name="expiry_date"/>
                    <field name="days_until_expiry"/>
                    <field name="needs_renewal" widget="boolean"/>
                    <field name="auto_renew" widget="boolean"/>
                    <field name="last_renewal_date"/>
                </list>
            </field>
        </record>
        
        <!-- SSL Certificate Form View -->
        <record id="view_ssl_certificate_form" model="ir.ui.view">
            <field name="name">ssl.certificate.form</field>
            <field name="model">ssl.certificate</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_create_certificate" 
                                string="Create Certificate" 
                                type="object" 
                                class="oe_highlight"
                                invisible="state in 'draft'"/>
                        <button name="action_renew_certificate" 
                                string="Renew Certificate" 
                                type="object" 
                                class="oe_highlight"
                                invisible="state in ['active,expired']"/>
                        <button name="action_check_deployment" 
                                string="Check Deployment" 
                                type="object"
                                invisible="state in 'active'"/>
                        <button name="action_download_certificate" 
                                string="Download Certificate" 
                                type="object"
                                invisible="exists == False"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,creating,active,expired"/>
                    </header>
                    <sheet>
                        <!-- <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object" name="action_view_history" icon="fa-history">
                                <field string="History" name="renewal_count" widget="statinfo"/>
                            </button>
                        </div> -->
                        
                        <group>
                            <group name="basic_info">
                                <field name="domain" readonly="state != 'draft'"/>
                                <field name="email" readonly="state != 'draft'"/>
                                <field name="auto_renew"/>
                            </group>
                            <group name="dns_config">
                                <field name="dns_provider_id" readonly="state != 'draft'"/>
                                <field name="dns_account_id" readonly="state != 'draft'"/>
                            </group>
                        </group>
                        
                        <group string="Certificate Status">
                            <group>
                                <field name="exists" widget="boolean"/>
                                <field name="expiry_date"/>
                                <field name="days_until_expiry"/>
                                <field name="needs_renewal" widget="boolean"/>
                            </group>
                            <group>
                                <field name="last_renewal_date"/>
                                <field name="renewal_count"/>
                                <field name="last_deployment_check"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Certificate Files" invisible="exists == False">
                                <group>
                                    <field name="cert_file" filename="cert.pem"/>
                                    <field name="key_file" filename="privkey.pem"/>
                                    <field name="chain_file" filename="chain.pem"/>
                                    <field name="fullchain_file" filename="fullchain.pem"/>
                                </group>
                            </page>
                            <page string="Deployment Status">
                                <field name="deployment_status" widget="text"/>
                            </page>
                            <page string="Logs">
                                <field name="creation_log" widget="text"/>
                            </page>
                            <page string="History">
                                <field name="history_ids" readonly="1">
                                    <list>
                                        <field name="timestamp"/>
                                        <field name="action"/>
                                        <field name="message"/>
                                        <field name="user_id"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- SSL Certificate Search View -->
        <record id="view_ssl_certificate_search" model="ir.ui.view">
            <field name="name">ssl.certificate.search</field>
            <field name="model">ssl.certificate</field>
            <field name="arch" type="xml">
                <search>
                    <field name="domain"/>
                    <field name="dns_provider_id"/>
                    <field name="state"/>
                    <filter string="Active" name="active" domain="[('state', '=', 'active')]"/>
                    <filter string="Needs Renewal" name="needs_renewal" domain="[('needs_renewal', '=', True)]"/>
                    <filter string="Auto Renew" name="auto_renew" domain="[('auto_renew', '=', True)]"/>
                    <separator/>
                    <filter string="Error" name="error" domain="[('state', '=', 'error')]"/>
                    <group expand="0" string="Group By">
                        <filter string="DNS Provider" name="group_dns_provider" context="{'group_by': 'dns_provider_id'}"/>
                        <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- SSL Certificate Action -->
        <record id="action_ssl_certificate" model="ir.actions.act_window">
            <field name="name">SSL Certificates</field>
            <field name="res_model">ssl.certificate</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first SSL certificate!
                </p>
                <p>
                    SSL certificates are automatically managed using Let's Encrypt
                    and your configured DNS providers.
                </p>
            </field>
        </record>
        
    </data>
</odoo>
