                <!-- Hero Section -->
                <section id="home" class="hero-section">
                    <div class="hero-background"></div>
                    <div class="container">
                        <div class="row min-vh-100 align-items-center">
                            <div class="col-lg-6">
                                <div class="hero-content">
                                    <h1 class="hero-title">
                                        <span class="greeting">Hej, jeg er</span>
                                        <span class="name">Martin Egeskov Olsen</span>
                                        <span class="role">Softwareudvikler &amp; Teknisk Leder</span>
                                    </h1>
                                    <p class="hero-description">
                                        Passioneret softwareudvikler med fokus på kvalitet, procesoptimering og skalerbare løsninger. 
                                        Jeg kombinerer teknisk dybde med ledelsesansvar i både interne og eksterne teams.
                                    </p>
                                    <div class="hero-buttons">
                                        <a href="#projects" class="btn btn-primary">Se Mine Projekter</a>
                                        <a href="#contact" class="btn btn-outline">Kontakt Mig</a>
                                    </div>
                                    <div class="hero-social">
                                        <a href="#" class="social-link"><i class="fab fa-github"></i></a>
                                        <a href="#" class="social-link"><i class="fab fa-linkedin"></i></a>
                                        <a href="#" class="social-link"><i class="fab fa-twitter"></i></a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="hero-visual">
                                    <div class="floating-card card-1"><i class="fab fa-python"></i><span>Python</span></div>
                                    <div class="floating-card card-2"><i class="fas fa-network-wired"></i><span>Odoo ERP</span></div>
                                    <div class="floating-card card-3"><i class="fas fa-server"></i><span>PostgreSQL</span></div>
                                    <div class="floating-card card-4"><i class="fab fa-docker"></i><span>Docker</span></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="scroll-indicator">
                        <div class="scroll-line"></div>
                        <span>Scroll</span>
                    </div>
                </section>

                <!-- About Section -->
                <section id="about" class="about-section">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="about-content">
                                    <h2 class="section-title">Om Mig</h2>
                                    <p class="about-text">
                                        Jeg er en ung, dedikeret IT-specialist med en passion for programmering og teknologi. 
                                        Jeg motiveres af kompleksitet og forandring og stræber altid efter at levere løsninger med høj kvalitet.
                                    </p>
                                    <p class="about-text">
                                        I mit daglige arbejde hos VK-Data og som CTO i Tourly kombinerer jeg softwareudvikling, projektledelse og systemarkitektur.
                                    </p>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="about-image">
                                    <div class="image-container">
                                        <img src="/me_portfolio_website/static/src/img/about-image.jpg" alt="Om Mig"/>
                                        <div class="image-overlay"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Skills Section -->
                <section id="skills" class="skills-section">
                    <div class="container">
                        <div class="row">
                            <div class="col-12 text-center">
                                <h2 class="section-title">Kompetencer &amp; Teknologier</h2>
                                <p class="section-subtitle">Mine tekniske styrker og værktøjer</p>
